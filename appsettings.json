{
  "Tado": {
    // The custom UserAgent to use in requests towards the Tado API
    "UserAgent": "KoenZomers.Tado.Api",

    // The Tado API base URL, typically "https://my.tado.com/api/v2/"
    "BaseUrl": "https://my.tado.com/api/v2/",

    // The Tado API authentication URL, typically "https://login.tado.com/oauth2/device_authorize"
    "AuthenticationUrl": "https://login.tado.com/oauth2/device_authorize",

    // The Tado API token URL, typically "https://login.tado.com/oauth2/token"
    "TokenUrl": "https://login.tado.com/oauth2/token",

    // The Tado API client ID, used for authentication, typically "1bb50063-6b0c-4d11-bd99-387f4a91cc46"
    "ClientId": "1bb50063-6b0c-4d11-bd99-387f4a91cc46",

    // The maximum duration a call to the Tado API may take before timing out
    "DefaultApiTimeoutSeconds": 30,

    // The Tado API home ID to use for requests
    "TadoHomeId": 12345
  },
  "Logging": {
    "LogLevel": {
      // Fatal: Critical errors that cause the application to crash or stop entirely.
      // Error: Serious issues that prevent part of the application from functioning correctly.
      // Warning: Unexpected events that don't stop the application but may lead to future issues.
      // Information: General events that describe the normal flow of the application.
      // Debug: Detailed information useful during development and debugging.
      // Trace: The most detailed level of logging, capturing every step of execution.

      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.AspNetCore.Http": "Warning",
      "System.Net.Http.HttpClient": "Debug",

      "KoenZomers.Tado.Api.Controllers.Tado": "Information",
      "KoenZomers.Tado.Api.Controllers.Http": "Information"
    }
  }
}